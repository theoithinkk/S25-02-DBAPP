<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="600.0"
            prefWidth="800.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.controller.DashboardController">

    <top>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10" left="15" right="15" top="15" />
            </padding>

            <Text style="-fx-font-size: 28; -fx-font-weight: bold; -fx-fill: #2c3e50;" text="Dashboard" />

            <Text fx:id="txtWelcome" style="-fx-font-size: 14; -fx-fill: #7f8c8d;" text="Welcome!" />
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="20" left="40" right="40" top="20" />
            </padding>

            <!-- Quick Statistics -->
            <HBox alignment="CENTER" spacing="20">
                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #3498db; -fx-background-radius: 10; -fx-padding: 20;">
                    <Text style="-fx-font-size: 32;" text="ðŸ‘¥" />
                    <Text fx:id="txtResidentCount" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-fill: white;" text="0" />
                    <Text style="-fx-fill: white; -fx-font-size: 12;" text="Total Residents" />
                </VBox>

                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #27ae60; -fx-background-radius: 10; -fx-padding: 20;">
                    <Text style="-fx-font-size: 32;" text="ðŸ’‰" />
                    <Text fx:id="txtServiceCount" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-fill: white;" text="0" />
                    <Text style="-fx-fill: white; -fx-font-size: 12;" text="Health Services" />
                </VBox>

                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #e74c3c; -fx-background-radius: 10; -fx-padding: 20;">
                    <Text style="-fx-font-size: 32;" text="ðŸ“‹" />
                    <Text fx:id="txtTransactionCount" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-fill: white;" text="0" />
                    <Text style="-fx-fill: white; -fx-font-size: 12;" text="Transactions Today" />
                </VBox>
            </HBox>

            <!-- Separator -->
            <Separator prefWidth="600" />

            <!-- Transaction Buttons -->
            <Text style="-fx-font-size: 18; -fx-font-weight: bold; -fx-fill: #2c3e50;" text="Transactions" />

            <GridPane alignment="CENTER" hgap="20" vgap="20">
                <!-- Row 1 -->
                <VBox alignment="CENTER" spacing="10" style="-fx-border-color: #3498db; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 30;" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Text style="-fx-font-size: 48;" text="ðŸ’Š" />
                    <Text style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-alignment: center;" text="Availing a Health Service" wrappingWidth="200" />
                    <Button onAction="#handleAvailHealthService" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10 30; -fx-font-weight: bold;" text="Start Transaction" />
                </VBox>

                <VBox alignment="CENTER" spacing="10" style="-fx-border-color: #95a5a6; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 30;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Text style="-fx-font-size: 48;" text="ðŸ“¦" />
                    <Text style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-alignment: center;" text="Issuing Medical Supplies" wrappingWidth="200" />
                    <Button onAction="#handleIssueMedicalSupplies" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 10 30;" text="Coming Soon" />
                </VBox>

                <!-- Row 2 -->
                <VBox alignment="CENTER" spacing="10" style="-fx-border-color: #95a5a6; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 30;" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Text style="-fx-font-size: 48;" text="ðŸ“¥" />
                    <Text style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-alignment: center;" text="Restocking Barangay Clinic Inventory" wrappingWidth="200" />
                    <Button onAction="#handleRestockInventory" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10 30;" text="Start Transaction" />
                </VBox>

                <VBox alignment="CENTER" spacing="10" style="-fx-border-color: #95a5a6; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 30;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Text style="-fx-font-size: 48;" text="ðŸ¥" />
                    <Text style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-alignment: center;" text="Logging Clinic Visits" wrappingWidth="200" />
                    <Button onAction="#handleLogClinicVisit" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10 30;" text="Start Transaction" />
                </VBox>
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>

        </VBox>
    </center>

</BorderPane>
