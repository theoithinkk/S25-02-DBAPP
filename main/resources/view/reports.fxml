<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.controller.ReportsController"
      spacing="15"
      style="-fx-background-color: #f5f7fa;"
      prefWidth="900.0" prefHeight="700.0">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header Card -->
    <HBox alignment="CENTER_LEFT" spacing="20"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <Text text="ðŸ“Š" style="-fx-font-size: 42;"/>
        <VBox>
            <Text text="Report Generation Center"
                  style="-fx-font-size: 26; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>
            <Text text="Generate and export comprehensive health reports"
                  style="-fx-font-size: 14; -fx-fill: #7f8c8d;"/>
        </VBox>
    </HBox>

    <!-- Dynamic Content Area -->
    <StackPane fx:id="contentPane" VBox.vgrow="ALWAYS"
               style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
        <!-- Content will be loaded dynamically -->
    </StackPane>

</VBox>
