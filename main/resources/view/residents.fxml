<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.effect.DropShadow?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.controller.ResidentController"
      spacing="15"
      style="-fx-background-color: #f5f7fa;"
      prefWidth="800.0" prefHeight="600.0">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header Card -->
    <HBox alignment="CENTER_LEFT" spacing="20"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <ImageView fitHeight="42" fitWidth="42" preserveRatio="true">
            <effect>
                <DropShadow radius="3" spread="0.05" color="rgba(0,0,0,0.15)" offsetX="1" offsetY="1" />
            </effect>
            <Image url="@/images/residents.png" />
        </ImageView>
        <VBox>
            <Text text="Residents Management"
                  style="-fx-font-size: 26; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>
            <Text text="Add, view, and manage resident information"
                  style="-fx-font-size: 14; -fx-fill: #7f8c8d;"/>
        </VBox>
    </HBox>

    <!-- Table Card -->
    <VBox spacing="10" VBox.vgrow="ALWAYS"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">

        <HBox alignment="CENTER_LEFT" spacing="10">
            <Text text="Resident Records" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-fill: #34495e;"/>
            <VBox HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblRecordCount" text="0 residents"
                   style="-fx-text-fill: #7f8c8d; -fx-font-size: 11;"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="ðŸ” Search:" style="-fx-font-size: 12; -fx-text-fill: #34495e; -fx-font-weight: bold;"/>
            <TextField fx:id="txtSearch" promptText="Type to search..."
                       prefWidth="300"
                       style="-fx-background-radius: 6; -fx-border-color: #dfe6e9; -fx-border-radius: 6; -fx-padding: 8;"/>
        </HBox>
        <TableView fx:id="tableResidents" VBox.vgrow="ALWAYS"
                   style="-fx-background-radius: 8; -fx-border-radius: 8;">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colFirstName" text="First Name" prefWidth="120"/>
                <TableColumn fx:id="colLastName" text="Last Name" prefWidth="120"/>
                <TableColumn fx:id="colAge" text="Age" prefWidth="50"/>
                <TableColumn fx:id="colSex" text="Sex" prefWidth="50"/>
                <TableColumn fx:id="colAddress" text="Address" prefWidth="180"/>
                <TableColumn fx:id="colContact" text="Contact" prefWidth="110"/>
                <!-- Admin/Personnel only columns -->
                <TableColumn fx:id="colHousehold" text="Household ID" prefWidth="100"/>
                <TableColumn fx:id="colVulnerability" text="Vulnerability" prefWidth="120"/>
            </columns>
        </TableView>
    </VBox>

    <!-- Input Form Card -->
    <VBox spacing="12"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">

        <Text text="Resident Information" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-fill: #34495e;"/>

        <!-- Row 1 -->
        <GridPane hgap="12" vgap="12">
            <Label text="First Name *" GridPane.columnIndex="0" GridPane.rowIndex="0"
                   style="-fx-text-fill: #34495e; -fx-font-size: 12;"/>
            <TextField fx:id="txtFirstName" promptText="Enter first name"
                       GridPane.columnIndex="0" GridPane.rowIndex="1" prefWidth="170"
                       style="-fx-background-radius: 6; -fx-border-color: #dfe6e9; -fx-border-radius: 6;"/>

            <Label text="Last Name *" GridPane.columnIndex="1" GridPane.rowIndex="0"
                   style="-fx-text-fill: #34495e; -fx-font-size: 12;"/>
            <TextField fx:id="txtLastName" promptText="Enter last name"
                       GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="170"
                       style="-fx-background-radius: 6; -fx-border-color: #dfe6e9; -fx-border-radius: 6;"/>

            <Label text="Age *" GridPane.columnIndex="2" GridPane.rowIndex="0"
                   style="-fx-text-fill: #34495e; -fx-font-size: 12;"/>
            <TextField fx:id="txtAge" promptText="Age"
                       GridPane.columnIndex="2" GridPane.rowIndex="1" prefWidth="80"
                       style="-fx-background-radius: 6; -fx-border-color: #dfe6e9; -fx-border-radius: 6;"/>

            <Label text="Sex *" GridPane.columnIndex="3" GridPane.rowIndex="0"
                   style="-fx-text-fill: #34495e; -fx-font-size: 12;"/>
            <ComboBox fx:id="comboSex" promptText="Select"
                      GridPane.columnIndex="3" GridPane.rowIndex="1" prefWidth="100"
                      style="-fx-background-radius: 6;"/>

            <Label text="Contact Number" GridPane.columnIndex="4" GridPane.rowIndex="0"
                   style="-fx-text-fill: #34495e; -fx-font-size: 12;"/>
            <TextField fx:id="txtContact" promptText="09XXXXXXXXX"
                       GridPane.columnIndex="4" GridPane.rowIndex="1" prefWidth="130"
                       style="-fx-background-radius: 6; -fx-border-color: #dfe6e9; -fx-border-radius: 6;"/>
        </GridPane>

        <!-- Row 2 -->
        <GridPane hgap="12" vgap="12">
            <Label text="Address" GridPane.columnIndex="0" GridPane.rowIndex="0"
                   style="-fx-text-fill: #34495e; -fx-font-size: 12;"/>
            <TextField fx:id="txtAddress" promptText="Complete address"
                       GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2" prefWidth="352"
                       style="-fx-background-radius: 6; -fx-border-color: #dfe6e9; -fx-border-radius: 6;"/>

            <Label fx:id="lblHousehold" text="Household ID" GridPane.columnIndex="2" GridPane.rowIndex="0"
                   style="-fx-text-fill: #34495e; -fx-font-size: 12;"/>
            <TextField fx:id="txtHouseholdId" promptText="Optional"
                       GridPane.columnIndex="2" GridPane.rowIndex="1" prefWidth="100"
                       style="-fx-background-radius: 6; -fx-border-color: #dfe6e9; -fx-border-radius: 6;"/>

            <Label fx:id="lblVulnerability" text="Vulnerability Status" GridPane.columnIndex="3" GridPane.rowIndex="0" GridPane.columnSpan="2"
                   style="-fx-text-fill: #34495e; -fx-font-size: 12;"/>
            <ComboBox fx:id="comboVulnerability" promptText="Select status"
                      GridPane.columnIndex="3" GridPane.rowIndex="1" GridPane.columnSpan="2" prefWidth="230"
                      style="-fx-background-radius: 6;"/>
        </GridPane>

        <Text text="* Required fields" style="-fx-font-size: 11; -fx-fill: #95a5a6;"/>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="âœ¨ Add Resident" onAction="#addResident" prefWidth="140.0" prefHeight="40.0"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 13; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
        <Button text="âœŽ Update" onAction="#updateResident" prefWidth="120.0" prefHeight="40.0"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 13; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
        <Button fx:id="btnDelete" text="ðŸ—‘ Delete" onAction="#deleteResident" prefWidth="120.0" prefHeight="40.0"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 13; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
        <Button text="ðŸ”„ Refresh" onAction="#refreshResidents" prefWidth="120.0" prefHeight="40.0"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 13; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
        <Button text="âœ– Clear" onAction="#clearFields" prefWidth="100.0" prefHeight="40.0"
                style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-font-size: 13; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
    </HBox>
</VBox>