<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.controller.DashboardController"
            prefWidth="800.0" prefHeight="600.0">

    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="10" left="15"/>
            </padding>

            <Text text="Dashboard"
                  style="-fx-font-size: 28; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>

            <Text fx:id="txtWelcome" text="Welcome!"
                  style="-fx-font-size: 14; -fx-fill: #7f8c8d;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="20" right="40" bottom="20" left="40"/>
            </padding>

            <!-- Quick Statistics -->
            <HBox spacing="20" alignment="CENTER">
                <VBox alignment="CENTER" spacing="5"
                      style="-fx-background-color: #3498db; -fx-background-radius: 10; -fx-padding: 20;">
                    <Text text="ðŸ‘¥" style="-fx-font-size: 32;"/>
                    <Text fx:id="txtResidentCount" text="0"
                          style="-fx-font-size: 28; -fx-font-weight: bold; -fx-fill: white;"/>
                    <Text text="Total Residents" style="-fx-fill: white; -fx-font-size: 12;"/>
                </VBox>

                <VBox alignment="CENTER" spacing="5"
                      style="-fx-background-color: #27ae60; -fx-background-radius: 10; -fx-padding: 20;">
                    <Text text="ðŸ’‰" style="-fx-font-size: 32;"/>
                    <Text fx:id="txtServiceCount" text="0"
                          style="-fx-font-size: 28; -fx-font-weight: bold; -fx-fill: white;"/>
                    <Text text="Health Services" style="-fx-fill: white; -fx-font-size: 12;"/>
                </VBox>

                <VBox alignment="CENTER" spacing="5"
                      style="-fx-background-color: #e74c3c; -fx-background-radius: 10; -fx-padding: 20;">
                    <Text text="ðŸ“‹" style="-fx-font-size: 32;"/>
                    <Text fx:id="txtTransactionCount" text="0"
                          style="-fx-font-size: 28; -fx-font-weight: bold; -fx-fill: white;"/>
                    <Text text="Transactions Today" style="-fx-fill: white; -fx-font-size: 12;"/>
                </VBox>
            </HBox>

            <!-- Separator -->
            <Separator prefWidth="600"/>

            <!-- Transaction Buttons -->
            <Text text="Transactions"
                  style="-fx-font-size: 18; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>

            <GridPane hgap="20" vgap="20" alignment="CENTER">
                <!-- Row 1 -->
                <VBox alignment="CENTER" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0"
                      style="-fx-border-color: #3498db; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 30;">
                    <Text text="ðŸ’Š" style="-fx-font-size: 48;"/>
                    <Text text="Availing a Health Service"
                          style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-alignment: center;"
                          wrappingWidth="200"/>
                    <Button text="Start Transaction" onAction="#handleAvailHealthService"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10 30; -fx-font-weight: bold;"/>
                </VBox>

                <VBox alignment="CENTER" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0"
                      style="-fx-border-color: #95a5a6; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 30;">
                    <Text text="ðŸ“¦" style="-fx-font-size: 48;"/>
                    <Text text="Issuing Medical Supplies"
                          style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-alignment: center;"
                          wrappingWidth="200"/>
                    <Button text="Coming Soon" onAction="#handleIssueMedicalSupplies"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 10 30;"/>
                </VBox>

                <!-- Row 2 -->
                <VBox alignment="CENTER" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="1"
                      style="-fx-border-color: #95a5a6; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 30;">
                    <Text text="ðŸ“¥" style="-fx-font-size: 48;"/>
                    <Text text="Restocking Barangay Clinic Inventory"
                          style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-alignment: center;"
                          wrappingWidth="200"/>
                    <Button text="Coming Soon" onAction="#handleRestockInventory"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 10 30;"/>
                </VBox>

                <VBox alignment="CENTER" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1"
                      style="-fx-border-color: #95a5a6; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 30;">
                    <Text text="ðŸ¥" style="-fx-font-size: 48;"/>
                    <Text text="Logging Clinic Visits"
                          style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-alignment: center;"
                          wrappingWidth="200"/>
                    <Button text="Coming Soon" onAction="#handleLogClinicVisit"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 10 30;"/>
                </VBox>
            </GridPane>

        </VBox>
    </center>

</BorderPane>