<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.controller.ServiceController"
      spacing="15"
      style="-fx-background-color: #f5f7fa;"
      prefWidth="800.0" prefHeight="600.0">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header Card -->
    <HBox alignment="CENTER_LEFT" spacing="20"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <Text text="ðŸ’‰" style="-fx-font-size: 42;"/>
        <VBox>
            <Text text="Health Services Management"
                  style="-fx-font-size: 26; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>
            <Text text="Manage available health services and their pricing"
                  style="-fx-font-size: 14; -fx-fill: #7f8c8d;"/>
        </VBox>
    </HBox>

    <!-- Table Card -->
    <VBox spacing="10" VBox.vgrow="ALWAYS"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">

        <HBox alignment="CENTER_LEFT" spacing="10">
            <Text text="Service Catalog" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-fill: #34495e;"/>
            <VBox HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblServiceCount" text="0 services"
                   style="-fx-text-fill: #7f8c8d; -fx-font-size: 11;"/>
        </HBox>

        <TableView fx:id="tableServices" VBox.vgrow="ALWAYS"
                   style="-fx-background-radius: 8; -fx-border-radius: 8;">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colType" text="Service Type" prefWidth="200"/>
                <TableColumn fx:id="colDescription" text="Description" prefWidth="280"/>
                <TableColumn fx:id="colFee" text="Fee (â‚±)" prefWidth="100"/>
                <TableColumn fx:id="colRemarks" text="Remarks" prefWidth="150"/>
            </columns>
        </TableView>
    </VBox>

    <!-- Input Form Card -->
    <VBox spacing="12"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">

        <Text text="Service Information" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-fill: #34495e;"/>

        <!-- Row 1 -->
        <GridPane hgap="12" vgap="12">
            <Label text="Service Type *" GridPane.columnIndex="0" GridPane.rowIndex="0"
                   style="-fx-text-fill: #34495e; -fx-font-size: 12;"/>
            <TextField fx:id="txtServiceType" promptText="e.g., Medical Consultation"
                       GridPane.columnIndex="0" GridPane.rowIndex="1" prefWidth="280"
                       style="-fx-background-radius: 6; -fx-border-color: #dfe6e9; -fx-border-radius: 6;"/>

            <Label text="Fee (â‚±) *" GridPane.columnIndex="1" GridPane.rowIndex="0"
                   style="-fx-text-fill: #34495e; -fx-font-size: 12;"/>
            <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <Text text="â‚±" style="-fx-font-size: 16; -fx-fill: #27ae60; -fx-font-weight: bold;"/>
                <TextField fx:id="txtFee" promptText="0.00"
                           prefWidth="120"
                           style="-fx-background-radius: 6; -fx-border-color: #dfe6e9; -fx-border-radius: 6;"/>
            </HBox>

            <Label text="Remarks" GridPane.columnIndex="2" GridPane.rowIndex="0"
                   style="-fx-text-fill: #34495e; -fx-font-size: 12;"/>
            <TextField fx:id="txtRemarks" promptText="e.g., Free for senior citizens"
                       GridPane.columnIndex="2" GridPane.rowIndex="1" prefWidth="240"
                       style="-fx-background-radius: 6; -fx-border-color: #dfe6e9; -fx-border-radius: 6;"/>
        </GridPane>

        <!-- Row 2 - Description -->
        <VBox spacing="5">
            <Label text="Description"
                   style="-fx-text-fill: #34495e; -fx-font-size: 12;"/>
            <TextArea fx:id="txtDescription" promptText="Detailed description of the service..."
                      prefHeight="60" wrapText="true"
                      style="-fx-background-radius: 6; -fx-border-color: #dfe6e9; -fx-border-radius: 6;"/>
        </VBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Text text="* Required fields" style="-fx-font-size: 11; -fx-fill: #95a5a6;"/>
            <VBox HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblNextId" text="Next ID: --"
                   style="-fx-text-fill: #3498db; -fx-font-size: 11; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="âœ¨ Add Service" onAction="#addService" prefWidth="140.0" prefHeight="40.0"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 13; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
        <Button text="âœŽ Update" onAction="#updateService" prefWidth="120.0" prefHeight="40.0"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 13; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
        <Button fx:id="btnDelete" text="ðŸ—‘ Delete" onAction="#deleteService" prefWidth="120.0" prefHeight="40.0"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 13; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
        <Button text="ðŸ”„ Refresh" onAction="#refreshServices" prefWidth="120.0" prefHeight="40.0"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 13; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
        <Button text="âœ– Clear" onAction="#clearFields" prefWidth="100.0" prefHeight="40.0"
                style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-font-size: 13; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
    </HBox>
</VBox>