<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<ScrollPane fitToWidth="true" style="-fx-background: #f5f7fa;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.ClinicVisitsController">

    <VBox spacing="20" style="-fx-padding: 20; -fx-background-color: #f5f7fa;">

        <!-- Header -->
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #27ae60; -fx-background-radius: 10; -fx-padding: 20;">
            <Text style="-fx-font-size: 36;" text="ðŸ¥" />
            <Text style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: white;" text="Log Clinic Visit" />
            <Text style="-fx-font-size: 14; -fx-fill: #e0f7e9;" text="Record a new clinic visit" />
        </VBox>

        <!-- Patient & Staff Information -->
        <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">

            <Text style="-fx-font-size: 16; -fx-font-weight: bold; -fx-fill: #2c3e50;" text="Patient and Staff Information" />

            <HBox alignment="CENTER_LEFT" spacing="20">
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-weight: bold;" text="Patient *" />
                    <ComboBox fx:id="residentCombo" prefHeight="35" prefWidth="300" style="-fx-font-size: 14;" />
                </VBox>

                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-weight: bold;" text="Health Personnel *" />
                    <ComboBox fx:id="personnelCombo" prefHeight="35" prefWidth="300" style="-fx-font-size: 14;" />
                </VBox>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="20">
                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Visit Type" />
                    <ComboBox fx:id="visitTypeCombo" prefHeight="35" prefWidth="150" style="-fx-font-size: 14;" />
                </VBox>

                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Visit Date *" />
                    <DatePicker fx:id="visitDatePicker" prefHeight="35" prefWidth="150" style="-fx-font-size: 14;" />
                </VBox>
            </HBox>
        </VBox>

        <!-- Medical Information -->
        <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">

            <Text style="-fx-font-size: 16; -fx-font-weight: bold; -fx-fill: #2c3e50;" text="Medical Information" />

            <VBox spacing="5">
                <Label style="-fx-font-weight: bold;" text="Diagnosis *" />
                <TextArea fx:id="diagnosisArea" prefHeight="80" promptText="Enter diagnosis, symptoms, and observations..." style="-fx-font-size: 14;" />
            </VBox>

            <VBox spacing="5">
                <Label style="-fx-font-weight: bold;" text="Treatment Provided" />
                <TextArea fx:id="treatmentArea" prefHeight="80" promptText="Describe treatment, procedures, or medications prescribed..." style="-fx-font-size: 14;" />
            </VBox>

            <VBox spacing="5">
                <Label style="-fx-font-weight: bold;" text="Additional Notes" />
                <TextArea fx:id="notesArea" prefHeight="60" promptText="Any follow-up instructions or additional information..." style="-fx-font-size: 14;" />
            </VBox>
        </VBox>

        <!-- Status Message -->
        <Label fx:id="lblStatus" style="-fx-font-weight: bold; -fx-font-size: 14; -fx-padding: 12; -fx-background-radius: 5; -fx-alignment: center;" visible="false" />

        <!-- Action Buttons -->
        <HBox alignment="CENTER" spacing="15" style="-fx-padding: 20 0 20 0;">
            <Button onAction="#handleSaveVisit" prefHeight="40" prefWidth="150" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 5;" text="ðŸ’¾ Save Visit" />
            <Button onAction="#handleCancel" prefHeight="40" prefWidth="100" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 5;" text="âœ– Cancel" />
        </HBox>

    </VBox>
</ScrollPane>