<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.effect.DropShadow?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.controller.AuditLogController"
      spacing="15"
      style="-fx-background-color: #f5f7fa;"
      prefWidth="800.0" prefHeight="600.0">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header Card -->
    <HBox alignment="CENTER_LEFT" spacing="20"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <ImageView fitHeight="42" fitWidth="42" preserveRatio="true">
            <effect>
                <DropShadow radius="3" spread="0.05" color="rgba(0,0,0,0.15)" offsetX="1" offsetY="1" />
            </effect>
            <Image url="@/images/audit-log.png" />
        </ImageView>
        <VBox>
            <Text text="Admin Control Center"
                  style="-fx-font-size: 26; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>
            <Text text="Manage system audit logs, user accounts, and generate reports"
                  style="-fx-font-size: 14; -fx-fill: #7f8c8d;"/>
        </VBox>
    </HBox>

    <!-- Tab Navigation -->
    <HBox spacing="10">
        <Button text="ðŸ“‹ Audit Log" onAction="#showAuditLog" prefWidth="140" prefHeight="40"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 12; -fx-font-weight: bold; -fx-background-radius: 8;"/>
        <Button text="ðŸ‘¥ User Accounts" onAction="#showUserAccounts" prefWidth="140" prefHeight="40"
                style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 12; -fx-font-weight: bold; -fx-background-radius: 8;"/>
    </HBox>

    <!-- Dynamic Content Area -->
    <StackPane fx:id="contentPane" VBox.vgrow="ALWAYS"
               style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">
        <!-- Content will be loaded dynamically -->
    </StackPane>

</VBox>