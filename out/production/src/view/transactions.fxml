<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.controller.TransactionController"
      spacing="15"
      style="-fx-background-color: #f5f7fa;"
      prefWidth="800.0" prefHeight="600.0">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header Card -->
    <HBox alignment="CENTER_LEFT" spacing="20"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <Text text="ðŸ“„" style="-fx-font-size: 42;"/>
        <VBox>
            <Text text="Service Transactions"
                  style="-fx-font-size: 26; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>
            <Text text="View and manage health service transaction records"
                  style="-fx-font-size: 14; -fx-fill: #7f8c8d;"/>
        </VBox>
    </HBox>

    <!-- Table Card -->
    <VBox spacing="10" VBox.vgrow="ALWAYS"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">

        <HBox alignment="CENTER_LEFT" spacing="10">
            <Text text="Transaction History" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-fill: #34495e;"/>
            <VBox HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblTransactionCount" text="0 transactions"
                   style="-fx-text-fill: #7f8c8d; -fx-font-size: 11;"/>
        </HBox>

        <TableView fx:id="tableTransactions" VBox.vgrow="ALWAYS"
                   style="-fx-background-radius: 8; -fx-border-radius: 8;">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colResident" text="Resident" prefWidth="150"/>
                <TableColumn fx:id="colService" text="Service" prefWidth="160"/>
                <TableColumn fx:id="colPersonnel" text="Personnel" prefWidth="150"/>
                <TableColumn fx:id="colDate" text="Date" prefWidth="100"/>
                <TableColumn fx:id="colRemarks" text="Remarks" prefWidth="170"/>
            </columns>
        </TableView>
    </VBox>

    <!-- Input Form Card -->
    <VBox spacing="12"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);">

        <Text text="New Transaction" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-fill: #34495e;"/>

        <!-- Row 1 -->
        <GridPane hgap="12" vgap="12">
            <Label text="Resident *" GridPane.columnIndex="0" GridPane.rowIndex="0"
                   style="-fx-text-fill: #34495e; -fx-font-size: 12;"/>
            <ComboBox fx:id="comboResident" promptText="Select resident"
                      GridPane.columnIndex="0" GridPane.rowIndex="1" prefWidth="220"
                      style="-fx-background-radius: 6;"/>

            <Label text="Service *" GridPane.columnIndex="1" GridPane.rowIndex="0"
                   style="-fx-text-fill: #34495e; -fx-font-size: 12;"/>
            <ComboBox fx:id="comboService" promptText="Select service"
                      GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="220"
                      style="-fx-background-radius: 6;"/>

            <Label text="Personnel *" GridPane.columnIndex="2" GridPane.rowIndex="0"
                   style="-fx-text-fill: #34495e; -fx-font-size: 12;"/>
            <ComboBox fx:id="comboPersonnel" promptText="Select personnel"
                      GridPane.columnIndex="2" GridPane.rowIndex="1" prefWidth="220"
                      style="-fx-background-radius: 6;"/>
        </GridPane>

        <!-- Row 2 -->
        <GridPane hgap="12" vgap="12">
            <Label text="Date *" GridPane.columnIndex="0" GridPane.rowIndex="0"
                   style="-fx-text-fill: #34495e; -fx-font-size: 12;"/>
            <DatePicker fx:id="dateProvided" promptText="Select date"
                        GridPane.columnIndex="0" GridPane.rowIndex="1" prefWidth="180"
                        style="-fx-background-radius: 6;"/>

            <Label text="Remarks" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="2"
                   style="-fx-text-fill: #34495e; -fx-font-size: 12;"/>
            <TextField fx:id="txtRemarks" promptText="Optional notes or comments"
                       GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="2" prefWidth="452"
                       style="-fx-background-radius: 6; -fx-border-color: #dfe6e9; -fx-border-radius: 6;"/>
        </GridPane>

        <Text text="* Required fields" style="-fx-font-size: 11; -fx-fill: #95a5a6;"/>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="âœš Add Transaction" onAction="#addTransaction" prefWidth="160" prefHeight="40"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 13; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
        <Button fx:id="btnDelete" text="ðŸ—‘ Delete" onAction="#deleteTransaction" prefWidth="120" prefHeight="40"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 13; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
        <Button text="ðŸ”„ Refresh" onAction="#refreshTransactions" prefWidth="120" prefHeight="40"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 13; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
        <Button text="âœ– Clear" onAction="#clearFields" prefWidth="100" prefHeight="40"
                style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-font-size: 13; -fx-background-radius: 8; -fx-cursor: hand;"/>
    </HBox>
</VBox>