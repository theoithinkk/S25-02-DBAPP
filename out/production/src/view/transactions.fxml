<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.effect.DropShadow?>

<VBox prefHeight="700.0"
      prefWidth="900.0"
      spacing="15"
      style="-fx-background-color: #f5f7fa;"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.controller.TransactionController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <ImageView fitHeight="42" fitWidth="42" preserveRatio="true">
            <effect>
                <DropShadow radius="3" spread="0.05" color="rgba(0,0,0,0.15)" offsetX="1" offsetY="1" />
            </effect>
            <Image url="@/images/transactions.png" />
        </ImageView>
        <VBox>
            <Text text="Transaction Management Center"
                  style="-fx-font-size: 26; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>
            <Text text="Manage all transactions - services, inventory, and clinic visits"
                  style="-fx-font-size: 14; -fx-fill: #7f8c8d;"/>
        </VBox>
    </HBox>

    <HBox spacing="10">
        <Button onAction="#showTransactions" prefHeight="40" prefWidth="180" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 12; -fx-font-weight: bold; -fx-background-radius: 8;" text="ðŸ’Š Service Transactions" />
        <Button onAction="#showInventoryMovement" prefHeight="40" prefWidth="180" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 12; -fx-font-weight: bold; -fx-background-radius: 8;" text="ðŸ“¦ Inventory Log" />
        <Button onAction="#showClinicVisits" prefHeight="40" prefWidth="180" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 12; -fx-font-weight: bold; -fx-background-radius: 8;" text="ðŸ¥ Clinic Visits" />
    </HBox>

    <!-- Dynamic Content Area -->
    <StackPane fx:id="contentPane" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0, 0, 2);" VBox.vgrow="ALWAYS">
        <!-- Content will be loaded dynamically -->
    </StackPane>

</VBox>