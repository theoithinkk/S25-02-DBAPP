<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.InventoryController">

    <padding>
        <Insets bottom="15" left="15" right="15" top="15" />
    </padding>

    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Clinic Inventory" />

    <TableView fx:id="tableInventory">
        <columns>
            <TableColumn fx:id="colId" prefWidth="40" text="ID" />
            <TableColumn fx:id="colName" prefWidth="200" text="Item Name" />
            <TableColumn fx:id="colCategory" prefWidth="150" text="Category" />
            <TableColumn fx:id="colQuantity" prefWidth="80" text="Quantity" />
        </columns>
    </TableView>

    <HBox spacing="10">
        <TextField fx:id="txtItemName" promptText="Item Name" />
        <TextField fx:id="txtCategory" promptText="Category" />
        <TextField fx:id="txtQuantity" promptText="Quantity" />
    </HBox>

    <HBox spacing="10">
        <Button onAction="#addItem" text="Add" />
        <Button onAction="#updateItem" text="Update" />
        <Button onAction="#deleteItem" text="Delete" />
        <Button onAction="#refreshInventory" text="Refresh" />
      <Button onAction="#restockInventory" text="Restock" />
    </HBox>
</VBox>
